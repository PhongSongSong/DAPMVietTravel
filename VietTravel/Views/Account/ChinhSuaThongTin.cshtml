@model VietTravel.Models.User

@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Chỉnh sửa thông tin cá nhân</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.TenUser)
            @Html.TextBoxFor(model => model.TenUser, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Username)
            @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DienThoai)
            @Html.TextBoxFor(model => model.DienThoai, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    }
</div>
