
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng ký</title>
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body class="web">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="wrapper">
            <form class="register-form">
                <h1>Đăng ký</h1>
                @if (TempData["error"] != null)
                {
                    <div class="error-container">
                        <p class="text-danger">@TempData["error"]</p>
                    </div>
                }
                <div class="input-box">
                    <i class='bx bxs-edit-alt'></i>
                    <input type="text" name="fullName" placeholder="Họ và tên" required />
                </div>
                <div class="input-box">
                    <i class='bx bxl-gmail'></i>
                    <input type="text" name="email" placeholder="Gmail" required />
                </div>
                <div class="input-box">
                    <i class='bx bx-user-circle'></i>
                    <input type="text" name="username" placeholder="Tên đăng nhập" required />
                </div>
                <div class="input-box">
                    <i class='bx bx-lock-alt'></i>
                    <input type="password" name="password" placeholder="Mật khẩu" required />
                </div>
                <div class="input-box">
                    <i class='bx bxs-shield-alt-2'></i>
                    <input type="password" name="confirmPassword" placeholder="Nhắc lại mật khẩu" required />
                </div>
                <div style="display: flex; justify-content: center">
                    <button type="submit" class="btn">Đăng ký</button>
                </div>
                <div class="login-link">
                    <p> Bạn đã có tài khoản? <a href="~/Account/Index" style="color: #409CD1;">Đăng Nhập</a></p>
                </div>
            </form>
        </div>
    }
</body>

</html>


